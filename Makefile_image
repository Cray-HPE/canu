NAME ?= cray-canu
VERSION ?= $(shell "cut -d '~' -f1 canu/.version | head -1)


IMAGE ?= artifactory.algol60.net/csm-docker/stable/${NAME}

all : image

image:
	docker build --no-cache --pull ${DOCKER_ARGS} --tag '${NAME}:${VERSION}' .


snyk:
	$(MAKE) -s image | xargs --verbose -n 1 snyk container test


