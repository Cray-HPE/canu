{#- storage #}
{%- for node in cabling.nodes if node.subtype == "storage" %}

interface lag {{ node.config.LAG_NUMBER_V1 }} multi-chassis
    no shutdown
    description {{ node.config.DESCRIPTION }}
    no routing
    vlan trunk native {{ variables.NATIVE_VLAN }}
    vlan trunk allowed {{ variables.SPINE_LEAF_VLANS }}
    lacp mode active
    lacp fallback
    spanning-tree port-type admin-edge

interface 1/1/{{ node.config.PORT }}
    no shutdown
    mtu 9198
    description {{ node.config.DESCRIPTION }}
    lag {{ node.config.LAG_NUMBER_V1 }}
{%- endfor %}
{#- end storage #}