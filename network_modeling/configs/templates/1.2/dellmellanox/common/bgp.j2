{#- bgp #}
protocol bgp
router bgp 65533 vrf default
router bgp 65533 vrf default router-id {{ variables.NMN_IP }} force
router bgp 65533 vrf default distance 20 70 20
router bgp 65533 vrf default maximum-paths ibgp 32
{%- for name, ip in variables.NMN_IPs.items() if "ncn-w" in name %}
router bgp 65533 vrf default neighbor {{ ip }} remote-as 65533
router bgp 65533 vrf default neighbor {{ ip }} route-map {{ name }}
router bgp 65533 vrf default neighbor {{ ip }} timers 1 3
router bgp 65533 vrf default neighbor {{ ip }} transport connection-mode passive
{%- endfor %}
{#- end bgp #}
