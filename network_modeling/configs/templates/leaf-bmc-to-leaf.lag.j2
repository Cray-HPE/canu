{# leaf-bmc-to-leaf #}
***===> leaf-bmc-to-leaf.lag.j2
{%- set ns = namespace(lag1='') %}
{%- for node in cabling.nodes if node.subtype == "leaf" %}
{%- if ns.lag1 == '' %}
{%- set ns.lag1 = node.config.LAG_NUMBER %}
interface lag ***===> {{ ns.lag1 }}
    no shutdown
    description ***===> leaf_bmc_to_leaf_lag
    no routing
    vlan trunk native 1
    vlan trunk allowed 2,4
    lacp mode active
{%- endif %}
{%- endfor %}

{%- for node in cabling.nodes if node.subtype == "leaf"%}

interface ***===> {{ node.config.INTERFACE_LAG }}
    no shutdown
    mtu 9198
    description ***===> {{ node.config.DESCRIPTION }}
    lag ***===> {{ ns.lag1 }}
{%- endfor %}
***===> end leaf-bmc-to-leaf.lag.j2
{#- end leaf-bmc-to-leaf #}