{# sw-spine.secondary #}
***===> sw-spine.secondary.j2
hostname ***===> {{ variables.HOSTNAME }}
user admin group administrators password plaintext ***===> {{ variables.PASSWORD }}
bfd
no ip icmp redirect
vrf CAN
vrf keepalive
ntp server ***===> {{ variables.NCN_W001 }}
ntp server ***===> {{ variables.NCN_W002 }}
ntp server ***===> {{ variables.NCN_W003 }}
ntp enable
!
!
!
ssh server vrf default
ssh server vrf mgmt
{% include 'acl.j2' %}

vlan 1
vlan 2
    name NMN
    apply access-list ip nmn-hmn in
    apply access-list ip nmn-hmn out
vlan 4
    name HMN
    apply access-list ip nmn-hmn in
    apply access-list ip nmn-hmn out
vlan 7
    name CAN
vlan 10
    name SUN
spanning-tree
spanning-tree priority 5
spanning-tree max-age 6
spanning-tree config-name MST0
spanning-tree config-revision 1
interface mgmt
shutdown

{% include 'spine-to-leaf.lag.j2' %}
{% include 'spine-to-cdu.j2' %}

interface lag 99
    no shutdown
    description ISL link
    no routing
    vlan trunk native 1 tag
    vlan trunk allowed all
    lacp mode active
interface ***===> {{ variables.VSX_KEEPALIVE }}
    no shutdown
    vrf attach keepalive
    ip address 192.168.255.1/31
interface ***===> {{ variables.VSX_ISL_PORT1 }}
    no shutdown
    mtu 9198
    description vsx isl
    lag 99
interface ***===> {{ variables.VSX_ISL_PORT2 }}
    no shutdown
    mtu 9198
    description vsx isl
    lag 99
interface loopback 0
    ip address ***===> {{ variables.LOOPBACK_IP }}
    ipv6 address ***===> {{ variables.IPV6_IP }}
    ip ospf 1 area 0.0.0.0
    ipv6 ospfv3 1 area 0.0.0.0
interface vlan 1
    ip mtu 9198
    ip address ***===> {{ variables.MTL_IP }}
    active-gateway ip mac 12:00:00:00:6b:00
    active-gateway ip ***===> {{ variables.MTL_IP_GATEWAY }}
    ipv6 address autoconfig
    ip helper-address 10.92.100.222
    ipv6 ospfv3 1 area 0.0.0.0
    ip igmp enable
interface vlan 2
    ip mtu 9198
    ip address ***===> {{ variables.NMN_IP }}
    active-gateway ip mac 12:00:00:00:6b:00
    active-gateway ip ***===> {{ variables.NMN_IP_GATEWAY }}
    ipv6 address autoconfig
    ip helper-address 10.92.100.222
    ipv6 ospfv3 1 area 0.0.0.0
    ip igmp enable
interface vlan 4
    ip mtu 9198
    ip address ***===> {{ variables.HMN_IP }}
    active-gateway ip mac 12:00:00:00:6b:00
    active-gateway ip ***===> {{ variables.HMN_IP_GATEWAY }}
    ipv6 address autoconfig
    ip helper-address 10.92.100.222
    ipv6 ospfv3 1 area 0.0.0.0
    ip igmp enable
interface vlan 7
    ip mtu 9198
    ip address ***===> {{ variables.CAN_IP_SECONDARY }}
    active-gateway ip mac 12:00:00:00:6b:00
    active-gateway ip ***===> {{ variables.CAN_IP_GATEWAY }}
    ipv6 address autoconfig
    ip helper-address 10.92.100.222
    ipv6 ospfv3 1 area 0.0.0.0
    ip igmp enable
vsx
    system-mac 02:00:00:00:6b:00
    inter-switch-link lag 99
    role secondary
    keepalive peer 192.168.255.0 source 192.168.255.1 vrf keepalive
    linkup-delay-timer 600
    vsx-sync vsx-global

https-server vrf default
https-server vrf mgmt
https-server vrf CAN
***===> end sw-spine.secondary.j2
{# end sw-spine.secondary #}