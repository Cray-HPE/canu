{#- leaf-bmc-to-leaf #}
{%- set ns = namespace(lag_displayed=false) %}
{%- for node in cabling.nodes if node.subtype == "leaf" %}
{%- if ns.lag_displayed == false %}
{%- set ns.lag_displayed = true %}
interface lag 255
    no shutdown
    description leaf_bmc_to_leaf_lag
    no routing
    vlan trunk native {{ variables.NATIVE_VLAN }}
    vlan trunk allowed {{ variables.LEAF_BMC_VLANS }}
    lacp mode active
{%- endif %}
{%- endfor %}

{%- for node in cabling.nodes if node.subtype == "leaf"%}

interface 1/1/{{ node.config.PORT }}
    no shutdown
    mtu 9198
    description {{ node.config.DESCRIPTION }}
    lag 255
{%- endfor %}
{#- end leaf-bmc-to-leaf #}